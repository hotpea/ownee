<h1>Editar funcionário</h1>

<form action="/employee/save" method="post">
  Id<br>
  <input type="text" name="id" value="<%= @employee.id %>" readonly="readonly" ><br>
  Nome<br>
  <input type="text" name="name" value="<%= @employee.name %>"><br>
  Data de nascimento<br>
  <input type="date" name="birth" value="<%= @employee.birth %>"><br>
  Salário<br>
  <input type="number" min="0.00" max="10000.00" step="0.01" name="salary" value="<%= @employee.salary %>" ><br>
  Departamento<br>
  <select name="department_id">
    <option value="0"> .: SELECIONE :. </option>
    <% @departments.each do |department| -%>
      <% if @employee.department_id == department.id %>
        <option value="<%= department.id %>" selected="selected" > <%= department.name %> </option>
      <% else %>
        <option value="<%= department.id %>"> <%= department.name %> </option>
      <% end %>
    <% end %>
  </select>
  <br><br>
  <input type="submit" value="Salvar">
  <a href="/employee/index">
    <button>
      Funcionários
    </button>
  </a>
</form>


