<h1>Editar funcionário</h1>

<form action="/employee/save" method="post">
  Id<br>
  <input type="text" name="id" value="<%= @employee.id %>" readonly="readonly" ><br>
  Nome<br>
  <input type="text" name="name" value="<%= @employee.name %>"><br>
  Data de nascimento<br>
  <input type="date" name="birth" value="<%= @employee.birth %>"><br>
  Salário<br>
  <input type="number" min="0.00" max="10000.00" step="0.01" name="salary" value="<%= @employee.salary %>" ><br>
  Cargo<br>
  <select name="function_id">
    <% @functions.each do |function| -%>
      <% if @department.function_id == function.id %>
        <option value="<%= function.id %>" selected="selected" > <%= function.name %> </option>
      <% else %>
        <option value="<%= function.id %>"> <%= function.name %> </option>
      <% end %>
    <% end %>
  </select>
  <br><br>
  <input type="submit" value="Salvar">
</form>


